<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.dao.UserDao">

    <resultMap id="user" type="com.study.bean.User">
        <id property="id" column="id"/>
        <result property="userName" column="username"/>
        <result property="pwd" column="password"/>
        <collection property="roleList"  ofType="com.study.bean.Role">
            <result property="id" column="rid"/>
            <result property="name" column="rname"/>
        </collection>
    </resultMap>

    <select id="login" resultMap="user" parameterType="string">
        select u.id,u.name,username,password,r.id as rid,r.name as rname from user u
            inner join user_role ur on ur.uid = u.id
            left join role r on r.id = ur.rid
        where u.username = #{userName}
    </select>
    <select id="rigister" resultType="String" parameterType="String">
        select username from user where username=#{userName}
    </select>
    <insert id="addUser" parameterType="com.study.bean.User">
        insert into user (username,password,name,Email) values(#{userName},#{pwd},#{name},#{Email})
    </insert>
    <select id="getId" parameterType="String" resultType="int">
        select id from user where username=#{userName}
    </select>
    <insert id="addRole" parameterType="java.util.HashMap">
        insert into user_role(uid,rid)values(#{uid},#{rid})
    </insert>
    <insert id="success" parameterType="com.study.bean.SecretList">
        insert into text(username,text,datetime)values(#{username},#{text},#{dateTime})
    </insert>
    <select id="getTexta"   resultType="com.study.bean.SecretList">
        select id,username,text,dateTime from text order by likes desc
    </select>
    <select id="getLikes" parameterType="Integer" resultType="Integer">
        select likes from text where id=#{name}
    </select>
    <update id="addLike" parameterType="java.util.HashMap" >
        update text set likes=#{numLikes} where id=#{id}
    </update>
    <select id="getMelden" parameterType="Integer"  resultType="java.util.HashMap" >
        select username,id from text where id=#{name}
    </select>
    <select id="searchMelden" parameterType="Integer" resultType="String">
        select username from `melden-formular` where `text-id`=#{name}
    </select>
    <insert id="addMelden" parameterType="java.util.HashMap" >
      insert into `melden-formular`(`text-id`,username,times)values(#{id},#{username},1)

    </insert>
      <update id="setInsertMelden" parameterType="java.util.HashMap" >
          update `melden-formular`set times=times+1 where `text-id`=#{id}
      </update>
<select id="getseinName" parameterType="int" resultType="String">
    select username from text where id=#{name}
</select>
    <select id="searchVorherigText" parameterType="int" resultType="String">
        select text from commt where text_id=#{id}
    </select>
    <insert id="insertText" parameterType="java.util.HashMap">
        insert into commt(text,text_id)value(#{inhalt},#{text_id})
    </insert>
    <update id="updateText" parameterType="java.util.HashMap">
        update commt set text=#{inhalt} where text_id=#{text_id}

    </update>
    <insert id="insertMess" parameterType="java.util.HashMap">
        insert into messege(user_id,short_text,text_id,author_id)value(#{User_id},#{Short_text},#{text_id},#{Author_id})
    </insert>
   <select id="searchMess" parameterType="string" resultType="com.study.bean.comment">
       select id, user_id,short_text,text_id,author_id from messege where user_id=#{a}
   </select>
    <delete parameterType="int" id="deleteIt">
        delete from messege where id=#{num}
    </delete>
    <select id="getAllMyS" parameterType="string" resultType="int">
        select count(*) from text where username=#{username}
    </select>
    <select id="getTexta2" parameterType="java.util.HashMap" resultType="com.study.bean.SecretList">
        select id,username,text,dateTime from text where username=#{username}
                                                  LIMIT #{page_id},4
    </select>
    <select id="getAllText"  resultType="int">
        select count(*) from text
    </select>
    <select id="getTexta3" parameterType="java.util.HashMap" resultType="com.study.bean.SecretList">
        select id,username,text,dateTime from text order by dateTime desc
            LIMIT #{page_id},4
    </select>
</mapper>